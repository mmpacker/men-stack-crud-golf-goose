<%- include('../partials/header') %>

<main>
    <div class='wrapper'>
        <div class='container'>
            <div class='row mb-4'>
                <h1 id='pageTitle'><%= title %></h1>
            </div>
            <div class='row'>
                <div class='card mx-50' id='editCourseCard'>
                    <form id='edit-form' action='/courses/<%= course._id %>?_method=PUT' method='POST'>
                        <div class='row'>
                            <div class='col-md-1 my-2'> </div>
                            <div class='col-md-11 my-2 d-flex align-self-start' id='editCourseName'>
                                <label>Golf Course Name:</label>
                                <input type='text' name='name' id='editCourseNameInput' size='41' placeholder='Course Name' required='true' value='<%= course.name %>'>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='col-md-1 my-2'> </div>
                            <div class='col-md-6 my-2' id='editCourseCity'>
                                <label>City: </label>
                                <input type='text' name='city' id='editCourseCityInput' size='25' placeholder='City' required='true' value='<%= course.city %>'>
                            </div>
                            <div class='col-md-5 my-2' id='editCourseState'>
                                <label>State: </label>
                                <input type='text' name='state' id='editCourseStateInput' size='5' placeholder="ST" required='true' value='<%= course.state %>'>
                            </div>
                        </div>                 
                        <div class='row'>
                            <div class='col-md-1 my-2'> </div>
                            <div class='col-md-10 my-2 d-flex align-items-center' id='editCourseSummary'>
                                <label>Summary: </label>
                                <textarea name='summary' size='40' rows='2' cols='50'><%= course.summary %></textarea>
                            </div>
                            <div class='col-md-1 my-2'> </div>
                        </div>
                        <div class='row'>
                            <div class='col-md-1 my-2'> </div>
                            <div class='col-md-4 my-2' id='editCourseRank'>
                                <label>US Rank: </label>
                                <input type='text' name='usRank' size='5' placeholder="0" value='<%= course.usRank %>'>
                            </div>
                            <div class='col-md-4 my-2' id='editCourseBuilt'>
                                <label>Year Built:</label>
                                <input type='text' name='yearBuilt' size='4' placeholder="2021" value='<%= course.yearBuilt %>'>
                            </div>
                            <div class='col-md-3 my-2' id='editCoursePublic'>
                                <label>Public?: </label>
                                <input type='checkbox' name='public' <%= course.public ? 'checked' : ''%>>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='col-md-1 my-2'> </div>
                            <div class='col-md-11 my-2' id='editCourseArchitects'>
                                <label>Architects: </label>
                                <input type='text' name='architects' size='48' placeholder="Tiger Woods" value='<%= course.architects %>'>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='col-md-1 my-2'> </div>
                            <div class='col-md-14 mx-4 my-2' id='editCourseImage'>
                                <div> Image URL:</div>
                                <input type='text' name='imageUrl' size='58' value='<%= course.imageUrl %>' required='true'>
                            </div>
                            <div class='col-md-1 my-2'> </div>
                        </div>
                        <div class='row'>
                            <div class='col-md-4 mx-3'> </div>
                            <button type='submit' class='btn btn-warning col-md-3 my-2'>Save Changes</button>
                            <div class='col-md-1 my-2'> </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>